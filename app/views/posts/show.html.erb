<h2><%= @post.title %></h2>
<!-- simple_formatを記述することにより、改行が反映される。 -->
<p><%= simple_format @post.body %></p>

<!-- コメントの作成 -->
<h3>Comments</h3>
<!-- ポストのコメントが存在していれば -->
<% if @post.comments.any? %>
<ul>
  <% @post.comments.each do |comment| %>
  <li>
    <%= comment.body %>
  </li>
  <% end %>
</ul>
<% end %>

<%= form_for ([@post, @post.comments.build]) do |f| %>
<!-- タイトルcolumnに対応するフィールド -->
<p>
    <%= f.text_field :body %>
</p>
<p>
    <%= f.submit %>
</p>
<% end %>
